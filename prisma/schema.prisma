generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id      Int      @id @default(autoincrement())
  nome    String
  email   String   @unique
  tarefas Tarefa[]
}

model Tarefa {
  id            Int       @id @default(autoincrement())
  descricao     String
  nome_setor    String
  prioridade    Prioridade
  data_cadastro DateTime  @default(now())
  status        Status    @default(A_FAZER)
  usuario       Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId     Int
}

enum Prioridade {
  BAIXA
  MEDIA
  ALTA
}

enum Status {
  A_FAZER
  FAZENDO
  PRONTO
}
